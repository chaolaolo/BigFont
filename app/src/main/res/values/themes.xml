<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BigFont.Light" parent="Theme.Material3.Light.NoActionBar">
        <!-- Ánh xạ các thuộc tính màu với resource trong values/colors.xml -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryContainer">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimaryContainer">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorSecondaryContainer">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondaryContainer">@color/colorOnSecondary</item>

        <item name="colorTertiary">@color/colorTertiary</item>
        <item name="colorOnTertiary">@color/colorGreen700</item>
        <item name="colorTertiaryContainer">@color/colorTertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/colorGreen400</item>

        <item name="colorError">@color/colorWarning500</item>
        <item name="colorOnError">@color/colorWarning200</item>
        <item name="colorErrorContainer">@color/colorWarning50</item>
        <item name="colorOnErrorContainer">@color/colorWarning300</item>

        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

<!--        dùng cho snack bar-->
        <item name="colorOnSurfaceVariant">@color/gray</item>
        <item name="colorSurfaceContainer">@color/colorCardBackground</item>
        <item name="colorSurfaceContainerLow">@color/colorSurfaceContainerLow</item>
        <item name="colorSurfaceContainerLowest">@color/colorSurfaceContainerLowest</item>
        <item name="colorSurfaceContainerHigh">@color/colorSurfaceContainerHigh</item>
        <item name="colorSurfaceContainerHighest">@color/colorSurfaceContainerHighest</item>
        <item name="colorSurfaceBright">@color/colorSurfaceBright</item>
        <item name="colorSurfaceDim">@color/colorSurfaceDim</item>
        <item name="colorOutline">@color/colorOutline</item>
        <item name="colorOutlineVariant">@color/colorOutlineVariant</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="colorOnSurfaceInverse">@color/colorOnSurfaceInverse</item>
        <item name="colorSurfaceInverse">@color/colorSurfaceInverse</item>


        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="bottomNavIndicatorStyle">@style/BottomNavIndicator</item>
        <item name="applyButtonTextColor">?attr/colorPrimary</item>
        <item name="usingButtonTextColor">?attr/colorError</item>
        <item name="switchThumbTint">@color/switch_thumb_tint</item>
        <item name="switchTrackTint">@color/switch_track_tint</item>

    </style>
    <style name="BottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:background">@color/colorGreen100</item>
        <item name="android:checked">true</item>
    </style>
</resources>